{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@src/*": ["./src/*"]
    },
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES6",
    "typeRoots": ["./src/@types"]
  },
  "exclude": ["node_modules", "src/**/*.spec.ts"],
  "include": ["src/**/*", "./node_modules/@types"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
